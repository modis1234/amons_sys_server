    "target": "es5",
    "module": "commonjs",
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
